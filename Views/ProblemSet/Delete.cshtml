@model ProblemSets.Models.ProblemSet

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                <label class="control-label">Topic</label>
            </dt>
            <dd class = "col-sm-10">
                <label class="control-label">@Model.Theme</label>
            </dd>
            <dt class="col-sm-2">
                <label class="control-label">Tags</label>
            </dt>
            <dd class = "col-sm-10">
                @foreach (var item in Model.ProblemTag)
                {
                    <label class="control-label">@item</label>
                }
            </dd>
            <dt class="col-sm-2">
                <label class="control-label">Problem Question</label></dt>
        <dd class="col-sm-10">
            <span style="white-space: pre-line">@Model.ProblemQuestion</span>
        </dd>
    </dl>
    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
        <form asp-action="Index">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Back to Problems" class="btn btn-info" />
        </form>
    </div>
</div>